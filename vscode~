cd /home/arduino/ArduinoApps/heartratemonitor/sketch && arduino-cli compile --fqbn arduino:zephyr:unoq sketch.ino --build-property="debug.level=DEBUG" --build-property="build.flags.c=-g -O0" --build-property="build.flags.cpp=-g -O0" --verbose

Server

cd /opt/openocd && /opt/openocd/bin/openocd -s /opt/openocd -f openocd_gpiod.cfg

cd /home/arduino/ArduinoApps/heartratemonitor/sketch && ~/.arduino15/packages/zephyr/tools/arm-zephyr-eabi/0.16.8/bin/arm-zephyr-eabi-gdb ~/.cache/arduino/sketches/DBCEF1FEA4C0B55DB3EA7651B94600A2/sketch.ino_debug.elf --batch --ex "target remote localhost:3333" --ex "info registers" --ex "quit"

